rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Development rules - more permissive for testing

    // Allow users to read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Trainee invitations - more permissive for development
    match /trainee_invitations/{invitationId} {
      allow read, write, create: if request.auth != null;
    }

    // Trainees - more permissive for development
    match /trainees/{traineeId} {
      allow read, write, create: if request.auth != null;
    }

    // Workouts - allow all authenticated users (for testing)
    match /workouts/{workoutId} {
      allow read, write, create: if request.auth != null;
    }

    // Sessions - allow all authenticated users (for testing)
    match /sessions/{sessionId} {
      allow read, write, create: if request.auth != null;
    }

    // Development collections for testing
    match /dev_test/{docId} {
      allow read, write, create, delete: if request.auth != null;
    }

    // Allow read access to public reference data
    match /exercise_library/{exerciseId} {
      allow read: if true;
      allow write, create, delete: if request.auth != null;
    }

    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}