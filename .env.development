# Development Environment Configuration
NODE_ENV=development

# Firebase Emulator URLs (for development)
NEXT_PUBLIC_FIREBASE_API_KEY=demo-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=localhost
NEXT_PUBLIC_FIREBASE_PROJECT_ID=fitness-platform-dev
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=fitness-platform-dev.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# App URL for invitation links (development)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email Configuration (development - mock service)
EMAIL_SERVICE_TYPE=mock
FROM_EMAIL=noreply@localhost
FROM_NAME=Fitness Platform Dev

# Firebase Emulator Settings
USE_FIREBASE_EMULATORS=true
FIRESTORE_EMULATOR_HOST=localhost:8081
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099

# Debug Settings
DEBUG_EMAIL_TO_CONSOLE=true
DISABLE_EMAIL_SENDING=false