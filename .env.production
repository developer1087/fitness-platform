# Production Environment Configuration
NODE_ENV=production

# Firebase Production Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_production_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=fitness-platform-prod.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=fitness-platform-prod
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=fitness-platform-prod.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# App URL for invitation links (production)
NEXT_PUBLIC_APP_URL=https://yourfitnessapp.com

# Email Configuration (production)
EMAIL_SERVICE_TYPE=production
EMAIL_PROVIDER=gmail
FROM_NAME=Fitness Platform

# Gmail Configuration (Option 1)
GMAIL_EMAIL=your_email@gmail.com
GMAIL_APP_PASSWORD=your_16_character_app_password

# Brevo Configuration (Option 2)
# EMAIL_PROVIDER=brevo
# BREVO_EMAIL=your_email@domain.com
# BREVO_API_KEY=your_brevo_smtp_key

# Custom SMTP Configuration (Option 3)
# EMAIL_PROVIDER=custom
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_EMAIL=noreply@yourdomain.com
# SMTP_PASSWORD=your_smtp_password
# SMTP_SECURE=false

# Firebase Production Settings
USE_FIREBASE_EMULATORS=false

# Security Settings
DISABLE_EMAIL_SENDING=false
DEBUG_EMAIL_TO_CONSOLE=false

# Analytics and Monitoring
ENABLE_ANALYTICS=true
SENTRY_DSN=your_sentry_dsn